<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button_save" android:onClick="saveOnClick" android:text="save" android:layout_marginTop="17dp" android:layout_centerHorizontal="true" android:layout_below="@+id/edit_text"/>

<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button_load" android:onClick="loadOnClick" android:text="load" android:layout_marginTop="17dp" android:layout_below="@id/button_save" android:layout_alignStart="@id/button_save"/>

</RelativeLayout>


